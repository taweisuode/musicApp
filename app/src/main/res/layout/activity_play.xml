<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pengge.musicplayer.ui.PlayActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:background="@drawable/music_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/play_title_margin_top"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/play_title"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/book_price"/>
        </LinearLayout>
        <com.pengge.musicplayer.diyView.CircleImageView
            android:id="@+id/song_background"
            android:layout_margin="80dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />
        <ListView
            android:id="@+id/scroll_view"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="@dimen/bottom_bar_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <FrameLayout
            android:id="@+id/play_bottom_bar_container"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></FrameLayout>
    </FrameLayout>
</RelativeLayout>
