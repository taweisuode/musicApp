<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_song_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pengge.musicplayer.ui.SongListActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:background="@color/red"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageButton
            android:id="@+id/iv_nav_back"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/back"
            android:onClick="skipBackView"
            android:background="@null"/>
        <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="歌单"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_right_music"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/song_list_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_list_info_height"
        android:layout_marginTop="@dimen/search_bar_height">
        <ImageView
            android:id="@+id/song_list_image"
            android:layout_width="@dimen/recommend_grid_view_height"
            android:layout_height="@dimen/recommend_grid_view_height"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/song_list_image"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/song_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/song_list_info"
        android:layout_marginBottom="@dimen/common_bottom_height">
    </ListView>
</RelativeLayout>
