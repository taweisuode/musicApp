<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recommend_image_height"
            android:src="@drawable/cover"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/common_recommend_margin"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recommend_image_height"
            android:layout_margin="@dimen/common_recommend_margin">
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:id="@+id/imageGroup"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/image_circle_margintop"
            android:layout_gravity="right"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2"/>

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dot_1"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2"/>
            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dot_2"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2"/>

            <ImageView
                android:id="@+id/dot_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dot_3"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2"/>
            <ImageView
                android:id="@+id/dot_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dot_4"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2"/>

            <ImageView
                android:id="@+id/dot_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dot_5"
                android:src="@drawable/recommend_image_circle_unclick"
                android:alpha="0.2" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_bottom_height"
            android:layout_marginTop="@dimen/recommend_song_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/recommend_textview_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐歌单 >"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/common_recommend_margin"/>
                <GridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_below="@+id/recommend_textview_title1"
                    android:layout_marginTop="5dp"
                    android:numColumns="3"
                    android:gravity="center"
                    android:verticalSpacing="10dp" >
                </GridView>
                <TextView
                    android:id="@+id/recommend_textview_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid_view"
                    android:text="推荐专辑 >"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/common_recommend_margin"/>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>